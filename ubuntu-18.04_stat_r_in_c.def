Bootstrap: docker
From: ubuntu@sha256:bc025862c3e8ec4a8754ea4756e33da6c41cba38330d7e324abd25c8e0b93300

%setup
    mkdir ${SINGULARITY_ROOTFS}/home/r-ctools
    cp -r * ${SINGULARITY_ROOTFS}/home/r-ctools

%post
   apt-get update 
   apt-get install -y gcc
   apt-get install -y g++
   apt-get install -y cmake
   apt-get install -y git
   mkdir -p /home/rmathlib 
   cd /home/rmathlib 
   git clone https://github.com/statslabs/rmath.git
   cd rmath
   mkdir build && cd build
   cmake ..
   make
   make install
   cd /home/r-ctools
   mkdir build && cd build
   cmake ..
   make
   ln -s /home/r-ctools/build/stat_r_in_c /usr/bin/

